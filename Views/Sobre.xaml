<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotell.Views.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Label Text="Sobre o Desenvolvedor"
               FontSize="30"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Label Text="Desenvolvedor: Kawan Oschiro Lima"
               FontSize="20"
               HorizontalOptions="Center" />

        <Label Text="Ano de Desenvolvimento: 2024"
               FontSize="20"
               HorizontalOptions="Center" />

        <Label Text="Aplicativo desenvolvido seguindo as aulas de Desenvolvimento de Sistemas."
               FontSize="16"
               Margin="0,20,0,0"
               HorizontalOptions="Center" 
               HorizontalTextAlignment="Center" />

        <Button Text="Voltar"
                Command="{Binding Source={x:Reference NavigationPage}, Path=BindingContext.VoltarCommand}"
                HorizontalOptions="Center"
                Margin="0,30,0,0"/>
    </VerticalStackLayout>
</ContentPage>
